            function getInit(obj, color, titile, datas) {
                var myChart = echarts.init(document.getElementById(obj));
                var option = {
                    color: color,
                    tooltip: {
                        trigger: 'item',
                        formatter: "{a} <br/>{b} : {c} ({d}%)"
                    },
                    legend: {
                        show: false,
                        orient: 'vertical',
                        left: 'left',
                        data: datas.name
                    },
                    series: [
                        {
                            name: titile,
                            type: 'pie',
                            radius: '90%',
                            center: ['50%', '50%'],
                            data: datas.nowData,
                            itemStyle: {
                                emphasis: {
                                    shadowBlur: 10,
                                    shadowOffsetX: 0,
                                    shadowColor: 'rgba(0, 0, 0, 0.6)'
                                }
                            },
                            label:{
                                show:true,
                                position:'inside',
                                align:'bottom'
                            },
                            hoverOffset:0,
                            hoverAnimation:false
                        }
                    ]
                };


                myChart.setOption(option);
            }
            function getData(datas) {
                let names = [];
                let nowData = [];
                var datas = datas;
                // var datas = [
                //     { value: 8, name: '默认数据' },
                //     { value: 92, name: '生化特性' }
                // ]
                datas.forEach(function (item, index) {
                    names.push(item.name);
                    nowData.push(item)
                })
                return {
                    names: names,
                    nowData: nowData
                }
            }



