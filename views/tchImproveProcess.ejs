        <script src="/js/tool/echarts.min.js"></script>
        <script>
            $(function () {
                var myChart = echarts.init(document.getElementById('chart'), 'macarons');
                myChart.setOption({
                    tooltip: {
                        trigger: 'axis'
                    },
                    grid: {
                        bottom: '20%'
                    },
                    toolbox: {
                        show: true,
                        feature: {
                            mark: { show: true },
                            dataView: { show: true, readOnly: true },
                            magicType: { show: true, type: ['bar'] },
                            restore: { show: true },
                            saveAsImage: { show: true }
                        }
                    },
                    calculable: true,
                    xAxis: {
                        axisLine: {
                            lineStyle: { width: 2 }
                        },
                        type: 'category',
                        data: ['第 1 题', '第 2 题', '第 3 题', '第 4 题', '第 5 题', '第 6 题', '第 7 题', '第 8 题']
                    },
                    yAxis: {
                        axisLine: {
                            lineStyle: { width: 2 }
                        },
                        type: 'value',
                        axisLabel: { formatter: '{value}%' },
                        splitLine: {
                            lineStyle: {
                                type: 'solid',
                                width: '2',
                                color: '#eeeeee'
                            }
                        },//去除网格线
                        splitArea: {
                            areaStyle: {
                                color: '#fff'
                            }
                        }
                    },
                    series: [
                        {
                            name: '正确率',
                            barWidth: 32,
                            type: 'bar',
                            data: [90, 80, 33, 14, 88, 60, 45, 70],

                            itemStyle: {
                                normal: {
                                    barBorderRadius: 4,
                                    color: function (param) {
                                        if (param.value < 50) {
                                            return '#dea2a2'
                                        }
                                        else {
                                            return '#2ec7c9'
                                        }
                                    },
                                    label: {
                                        show: true,
                                        color: '#333',
                                        position: 'top',
                                        formatter: '{c}%'
                                    }
                                }
                            }
                        }
                    ]
                });
            })
