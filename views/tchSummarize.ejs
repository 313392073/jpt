                                        </tr>
                                    </thead>
                                    <tbody>
                                        <%for(var i=0;i<5;i++) {%>
                                            <tr>
                                                <td>王天成</td>
                                                <td>√</td>
                                                <td>√</td>
                                                <td>√</td>
                                                <td>√</td>
                                                <td class="td-error">×</td>
                                                <td>√</td>
                                                <td>√</td>
                                                <td class="td-error">×</td>
                                                <td>√</td>
                                                <td class="td-error">×</td>
                                                <td class="score">40</td>
                                            </tr>
                                            <%}%>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
            </div>
        </div>
        <script src="/js/tool/echarts.min.js"></script>
        <script type="text/javascript">
            var data1 = [
                { value: 8, name: '默认数据' },
                { value: 92, name: '生化特性' }
            ]
            var data2 = [
                { value: 83, name: '默认数据' },
                { value: 17, name: '国际理解' }
            ]
            getInit('echart1', ['#cccccc', '#2ec7c9'], '生化特性', getData(data1));
            getInit('echart2', ['#cccccc', '#b6a2de'], '国际理解', getData(data2));
            getInit('echart3', ['#cccccc', '#5ab1ef'], '国际理解', getData(data1));
            getInit('echart4', ['#cccccc', '#ffb980'], '国际理解', getData(data1));
            getInit('echart5', ['#cccccc', '#8d98b3'], '国际理解', getData(data1));
            getInit('echart6', ['#cccccc', '#e5cf0d'], '国际理解', getData(data1));
            getInit('echart7', ['#cccccc', '#97b552'], '国际理解', getData(data1));
            getInit('echart8', ['#cccccc', '#95706d'], '国际理解', getData(data1));
            function getInit(obj, color, titile, datas) {
                var myChart = echarts.init(document.getElementById(obj));
                var option = {
                    color: color,
                    tooltip: {
                        trigger: 'item',
                        formatter: "{a} <br/>{b} : {c} ({d}%)"
                    },
                    legend: {
                        show: false,
                        orient: 'vertical',
                        left: 'left',
                        data: datas.name
                    },
                    series: [
                        {
                            name: titile,
                            type: 'pie',
                            radius: '80%',
                            center: ['50%', '50%'],
                            data: datas.nowData,
                            itemStyle: {
                                emphasis: {
                                    shadowBlur: 10,
                                    shadowOffsetX: 0,
                                    shadowColor: 'rgba(0, 0, 0, 0.6)'
                                }
                            },
                            label:{
                                show:true,
                                position:'inside',
                                align:'bottom'
                            },
                            hoverOffset:0,
                            hoverAnimation:false
                        }
                    ]
                };


                myChart.setOption(option);
            }
            function getData(datas) {
                let names = [];
                let nowData = [];
                var datas = datas;
                datas.forEach(function (item, index) {
                    names.push(item.name);
                    nowData.push(item)
                })
                return {
                    names: names,
                    nowData: nowData
                }
            }
        </script>
        <script>
                $(function () {
                    var myChart = echarts.init(document.getElementById('ver-echart'), 'macarons');
                    myChart.setOption({
                        tooltip: {
                            trigger: 'axis'
                        },
                        grid: {
                            bottom: '20%'
                        },
                        toolbox: {
                            show: true,
                            feature: {
                                mark: { show: true },
                                dataView: { show: true, readOnly: true },
                                magicType: { show: true, type: ['bar'] },
                                restore: { show: true },
                                saveAsImage: { show: true }
                            }
                        },
                        calculable: true,
                        xAxis: {
                            axisLine: {
                                lineStyle: { width: 2 }
                            },
                            type: 'category',
                            data: ['第 1 题', '第 2 题', '第 3 题', '第 4 题', '第 5 题', '第 6 题', '第 7 题', '第 8 题']
                        },
                        yAxis: {
                            axisLine: {
                                lineStyle: { width: 2 }
                            },
                            type: 'value',
                            axisLabel: { formatter: '{value}%' },
                            splitLine: {
                                lineStyle: {
                                    type: 'solid',
                                    width: '2',
                                    color: '#eeeeee'
                                }
                            },//去除网格线
                            splitArea: {
                                areaStyle: {
                                    color: '#fff'
                                }
                            }
                        },
                        series: [
                            {
                                name: '正确率',
                                barWidth: 32,
                                type: 'bar',
                                data: [90, 80, 33, 14, 88, 60, 45, 70],
    
                                itemStyle: {
                                    normal: {
                                        barBorderRadius: 4,
                                        color: function (param) {
                                            if (param.value < 50) {
                                                return '#dea2a2'
                                            }
                                            else {
                                                return '#2ec7c9'
                                            }
                                        },
                                        label: {
                                            show: true,
                                            color: '#333',
                                            position: 'top',
                                            formatter: '{c}%'
                                        }
                                    }
                                }
                            }
                        ]
                    });
                })
            </script>
</body>

</html>